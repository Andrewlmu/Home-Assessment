<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/styles.css">
    <title><%= doctor.name %></title>
  </head>
  <body>
    <button onclick="window.location.href='/'">Back to Doctors</button>
    <h1><%= doctor.name %></h1>
    <p>Specialty: <%= doctor.specialty %></p>
    <p>Area: <%= doctor.area %></p>
    <p>Review Score: <%= doctor.reviewScore %></p>

    <h2>Similar Doctors</h2>
    <ol>
      <% similarDoctors.forEach(similarDoctor => { %>
      <li>
        <a href="/doctor/<%= similarDoctor.id %>"><%= similarDoctor.name %></a>
      </li>
      <% }) %>
    </ol>
  </body>
</html>
